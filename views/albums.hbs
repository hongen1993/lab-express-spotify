<div class="row mx-4 my-5">
    {{#each albums}}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{images.[0].url}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <a href="/tracks/{{id}}" class="btn btn-primary">view album</a>
        </div>
    </div>
    {{/each}}
</div>